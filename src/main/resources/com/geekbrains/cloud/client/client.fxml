<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="632.0" prefWidth="813.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.geekbrains.cloud.client.ClientController">
    <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="632.0"
          prefWidth="398.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
        <ListView fx:id="clientListView" prefHeight="782.0" prefWidth="398.0"/>
        <TextField fx:id="textField" editable="false" onAction="#sendFile" prefHeight="200.0" prefWidth="200.0"/>
    </VBox>
    <VBox>
        <ListView fx:id="serverListView" prefHeight="632.0" prefWidth="472.0"/>
        <HBox prefHeight="38.0" prefWidth="415.0">
            <TextField fx:id="serverTextField" prefHeight="25.0" prefWidth="268.0" editable="false" onAction="#getFile"/>
            <Button fx:id="getFileFromServer" onAction="#getFile" mnemonicParsing="false" prefHeight="25.0" prefWidth="92.0" text="Получить"/>
            <Button fx:id="refreshServerList" onAction="#refreshServerList" mnemonicParsing="false" prefHeight="25.0" prefWidth="79.0" text="Обновить"/>
        </HBox>
    </VBox>
</HBox>
